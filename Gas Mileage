package org.example;

import java.util.Scanner;

class Calculations{

    public void mileage(int a, int b,int c) {
        int result = (a-b)/c;
        System.out.println("The gas mileage is: " + result + " Km/L");

    }
}
public class Mil_Calculator extends Calculations {

    public static void main(String args[]) {
        int a,b,c;
        Mil_Calculator myobj = new Mil_Calculator();
        Scanner Jur = new Scanner(System.in);
        System.out.println("Enter the current odometer:");
        a = Jur.nextInt();
        System.out.println("Enter the previous odometer:");
        b = Jur.nextInt();
        System.out.println("Enter the amount of gas in $:");
        c = Jur.nextInt();
        myobj.mileage(a,b,c);

    }
}
