package org.example;

import java.util.Scanner;

// Press Shift twice to open the Search Everywhere dialog and type `show whitespaces`,
// then press Enter. You can now see whitespace characters in your code.
public class InterestRate {
    public static void main(String[] args) {
        //Simple interest formula
        // I = Interest
        // P = Principal (initial value )
        // r = Interest rate
        // t = time(years)

        int P;
        int r;
        int t;
        int n;

        Scanner sc = new Scanner(System.in);
        System.out.println("***Insert the number of your request*** ");
        System.out.println("1.Simple Interest");
        System.out.println("2.Compound  Interest rate");
        String request = sc.nextLine();

        if(request.equals("1")) {
            System.out.print("Insert the value of P: ");
            P = Integer.parseInt(sc.nextLine());
            System.out.print("Insert the value of r: ");
            r = Integer.parseInt(sc.nextLine());
            System.out.print("Insert the value of t: ");
            t = Integer.parseInt(sc.nextLine());

            double result = P * r * t;

            System.out.printf("Interest = %.2f\n", result);
            System.exit(0);
        }else {
            System.out.print("Insert the value of Initial value: ");
            P = Integer.parseInt(sc.nextLine());
            System.out.print("Insert the value of interest rate: ");
            r = Integer.parseInt(sc.nextLine());
            System.out.print("Insert the value of number of times compounded in one t: ");
            n = Integer.parseInt(sc.nextLine());
            System.out.print("Insert the value of time (years): ");
            t = Integer.parseInt(sc.nextLine());

            double value = Math.pow((1+ ((double) r/n)),n*t); // (1+ r/n)^n*t

            double result = P * value;

            System.out.printf("Future value = %.2f\n", result);
            System.exit(0);
        }

    }
}
